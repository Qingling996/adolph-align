{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018", "dom", "esnext"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}
